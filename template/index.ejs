<html>
    <head>
        <title><%=name%> <%=version%></title>
        <link rel="stylesheet" href="static/style.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://kit.fontawesome.com/852720c194.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <h1><%=name%></h1>
        <p><%=description%></p>
        <form id="pastebin" method="POST">
            <button title="Upload" class="button" onclick="javascript:document.getElementById('pastebin').submit();">
                <i class="fas fa-paper-plane fa-3x"></i>
            </button>
            <textarea id="content" name="content" placeholder="Type paste here"></textarea>
        </form>
        <p style="text-align: right;">Running NodeBin <%=version%></p>
    </body>
</html>